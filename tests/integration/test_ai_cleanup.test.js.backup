	/**
	 * ÊâßË°åÁúüÂÆûÁöÑCLIÂëΩ‰ª§ÔºàÂΩìÂëΩ‰ª§ÂÆûÁé∞Âêé‰ΩøÁî®Ôºâ
	 * @param {string} command - CLIÂëΩ‰ª§
	 * @param {string[]} args - ÂëΩ‰ª§ÂèÇÊï∞
	 * @returns {Promise<{stdout: string, stderr: string, code: number}>}
	 */
	async function executeCLICommand(command, args = []) {
		return new Promise((resolve, reject) => {
			const cliPath = path.join(__dirname, "..", "..", "bin", "speco-tasker.js");
			const nodeArgs = [cliPath, command, ...args];

			const child = spawn("node", nodeArgs, {
				cwd: testProjectDir,
				stdio: ["pipe", "pipe", "pipe"],
			});

			let stdout = "";
			let stderr = "";

			child.stdout.on("data", (data) => {
				stdout += data.toString();
			});

			child.stderr.on("data", (data) => {
				stderr += data.toString();
			});

			child.on("close", (code) => {
				resolve({ stdout, stderr, code });
			});

			child.on("error", (error) => {
				reject(error);
			});
		});
	}

	/**
	 * Ê®°ÊãüCLIÂëΩ‰ª§ÊâßË°åÔºàÂΩìÂâçÈò∂ÊÆµ‰ΩøÁî®Ôºâ
	 * ÂΩìÁúüÂÆûCLIÂëΩ‰ª§ÂÆûÁé∞ÂêéÔºåËøô‰∏™ÂáΩÊï∞Â∞ÜË¢´ÊõøÊç¢‰∏∫executeCLICommand
	 */
	async function mockExecuteCLICommand(command, args = []) {
		console.log(`üîß Mock executing: speco-tasker ${command} ${args.join(" ")}`);

		// Ê®°ÊãüÂëΩ‰ª§ÊâßË°åÁªìÊûú
		switch (command) {
			case "scan-ai":
				return {
					stdout: JSON.stringify({
						found: 4,
						files: [
							"src/ai-client.js",
							"src/chatgpt-integration.js",
							"docs/ai-setup.md",
							"src/utils/claude-helper.js"
						],
						patterns: ["openai", "claude", "chatgpt", "anthropic"],
					}),
					stderr: "",
					code: 0,
				};

			case "cleanup-ai":
				// Ê®°ÊãüÊ∏ÖÁêÜAIÂÜÖÂÆπ
				await performMockAICleanup(args);
				return {
					stdout: JSON.stringify({
						success: true,
						filesProcessed: 4,
						filesRemoved: args.includes("--dry-run") ? 0 : 4,
						dryRun: args.includes("--dry-run"),
					}),
					stderr: "",
					code: 0,
				};

			case "verify-cleanup":
				return {
					stdout: JSON.stringify({
						clean: true,
						remainingAIContent: 0,
						totalFiles: 8,
						checkedFiles: 8,
					}),
					stderr: "",
					code: 0,
				};

			default:
				return {
					stdout: "",
					stderr: `Unknown command: ${command}`,
					code: 1,
				};
		}
	}

	/**
	 * Ê®°ÊãüAIÊ∏ÖÁêÜÊìç‰ΩúÔºàÂΩìÁúüÂÆûÊúçÂä°ÂÆûÁé∞ÂêéÁßªÈô§Ôºâ
	 */
	async function performMockAICleanup(args) {
		const isDryRun = args.includes("--dry-run");

		if (!isDryRun) {
			// Ê®°ÊãüÂà†Èô§AIÁõ∏ÂÖ≥Êñá‰ª∂
			const aiFiles = [
				"src/ai-client.js",
				"src/chatgpt-integration.js",
				"docs/ai-setup.md",
				"src/utils/claude-helper.js"
			];

