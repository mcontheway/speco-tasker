{
	"name": "speco-tasker",
	"version": "1.2.0",
	"description": "A pure manual task management system for efficient development workflows, designed to work seamlessly with any development environment.",
	"main": "index.js",
	"type": "module",
	"bin": {
		"speco-tasker": "bin/speco-tasker.js",
		"task-master": "bin/task-master.js",
		"task-master-mcp": "mcp-server/server.js"
	},
	"workspaces": ["."],
	"scripts": {
		"test": "npm run test:ci",
		"test:ci": "GRACEFUL_FS_PATCH=0 ./node_modules/.bin/vitest run",
		"test:fails": "GRACEFUL_FS_PATCH=0 NODE_OPTIONS=\"--experimental-specifier-resolution=node --experimental-modules --no-deprecation --no-warnings\" node_modules/.bin/jest --config jest.config.cjs --onlyFailures --forceExit",
		"test:watch": "GRACEFUL_FS_PATCH=0 NODE_OPTIONS=\"--experimental-specifier-resolution=node --experimental-modules --no-deprecation --no-warnings\" node_modules/.bin/jest --config jest.config.cjs --watch --passWithNoTests",
		"test:coverage": "GRACEFUL_FS_PATCH=0 NODE_OPTIONS=\"--experimental-specifier-resolution=node --experimental-modules --no-deprecation --no-warnings\" node_modules/.bin/jest --config jest.config.cjs --coverage --forceExit",
		"test:unit": "GRACEFUL_FS_PATCH=0 NODE_OPTIONS=\"--experimental-specifier-resolution=node --experimental-modules --no-deprecation --no-warnings\" node_modules/.bin/jest --config jest.config.cjs --testPathPatterns=\"unit|__tests__\" --passWithNoTests --forceExit",
		"test:contract": "GRACEFUL_FS_PATCH=0 NODE_OPTIONS=\"--experimental-specifier-resolution=node --experimental-modules --no-deprecation --no-warnings\" node_modules/.bin/jest --config jest.config.cjs --testPathPatterns=\"contract\" --passWithNoTests --forceExit",
		"test:integration": "GRACEFUL_FS_PATCH=0 ./node_modules/.bin/jest --config jest.config.cjs --testPathPatterns=\"integration\" --passWithNoTests --forceExit --bail --testTimeout=10000",
		"test:e2e": "./tests/e2e/run_e2e.sh",
		"test:e2e-report": "./tests/e2e/run_e2e.sh --analyze-log",
		"prepare": "husky",
		"changeset": "changeset",
		"release": "changeset publish",
		"inspector": "npx @modelcontextprotocol/inspector node mcp-server/server.js",
		"mcp-server": "node mcp-server/server.js",
		"setup": "node setup.js",
		"format-check": "biome format .",
		"format": "biome format . --write",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"quality-check": "biome check . && biome format .",
		"pre-commit": "echo 'Pre-commit checks handled by .husky/pre-commit'",
		"pre-push": "echo 'Pre-push checks handled by .husky/pre-push hook'",
		"ci": "npm run quality-check && npm run test:ci && npm run test:integration",
		"ci:full": "npm run quality-check && npm run test:ci && npm run test:integration && npm run test:e2e",
		"contract-validate": "node scripts/modules/contract-validator.js",
		"contract-validate:json": "node scripts/modules/contract-validator.js --json",
		"depcheck": "depcheck",
		"audit": "npm audit --audit-level moderate",
		"madge": "madge --circular --extensions js,ts,json src/",
		"npm-check-updates": "npm-check-updates",
		"husky:install": "husky",
		"husky:uninstall": "husky uninstall",
		"perf": "node scripts/performance-monitor.js",
		"perf:report": "cat performance-results.json | jq .",
		"clean": "rm -rf coverage/ .taskmaster/tasks/ tmp/ performance-results.json",
		"build": "echo 'No build step required for this project'",
		"docs:build": "echo 'Documentation is maintained manually'"
	},
	"keywords": [
		"task",
		"management",
		"development",
		"workflow",
		"productivity",
		"mcp",
		"cli",
		"project-management",
		"task-tracking",
		"manual-workflow"
	],
	"author": "Speco Team",
	"license": "MIT WITH Commons-Clause",
	"dependencies": {
		"@aws-sdk/credential-providers": "^3.817.0",
		"@inquirer/search": "^3.0.15",
		"@streamparser/json": "^0.0.22",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"boxen": "^8.0.1",
		"cli-highlight": "^2.1.11",
		"cli-progress": "^3.12.0",
		"cli-table3": "^0.6.5",
		"commander": "^11.1.0",
		"cors": "^2.8.5",
		"express": "^4.21.2",
		"fastmcp": "^3.5.0",
		"figlet": "^1.8.0",
		"fuse.js": "^7.1.0",
		"gradient-string": "^3.0.0",
		"helmet": "^8.1.0",
		"inquirer": "^12.5.0",
		"jsonc-parser": "^3.3.1",
		"jsonrepair": "^3.13.0",
		"jsonwebtoken": "^9.0.2",
		"lru-cache": "^10.2.0",
		"ora": "^8.2.0",
		"source-map-support": "^0.5.21",
		"uuid": "^11.1.0",
		"zod": "^3.23.8",
		"zod-to-json-schema": "^3.24.5"
	},
	"optionalDependencies": {
		"@biomejs/cli-linux-x64": "^1.9.4"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mcontheway/speco-tasker.git"
	},
	"homepage": "https://github.com/mcontheway/speco-tasker#readme",
	"bugs": {
		"url": "https://github.com/mcontheway/speco-tasker/issues"
	},
	"files": [
		"scripts/**",
		".cursor/**",
		"README*.md",
		"index.js",
		"bin/**",
		"mcp-server/**",
		"src/**"
	],
	"overrides": {
		"node-fetch": "^2.6.12",
		"whatwg-url": "^11.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.28.4",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-syntax-import-meta": "^7.10.4",
		"@babel/preset-env": "^7.28.3",
		"@biomejs/biome": "^1.9.4",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.28.1",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@modelcontextprotocol/sdk": "^1.18.0",
		"@types/jest": "^29.5.14",
		"@vitest/ui": "3.2.4",
		"babel-jest": "30.1.2",
		"babel-plugin-transform-import-meta": "^2.3.3",
		"chalk": "^4.1.2",
		"depcheck": "^1.4.7",
		"eslint": "^9.35.0",
		"execa": "^8.0.1",
		"glob": "^11.0.3",
		"husky": "^9.1.7",
		"ink": "^5.0.1",
		"jest": "30.1.3",
		"jest-environment-node": "^29.7.0",
		"lint-staged": "^16.1.6",
		"madge": "^8.0.0",
		"mock-fs": "^5.5.0",
		"npm-check-updates": "^18.1.1",
		"prettier": "^3.5.3",
		"supertest": "^7.1.0",
		"tsx": "^4.16.2",
		"vitest": "3.2.4"
	},
	"lint-staged": {
		"*.{js,ts,json}": [
			"biome format --write",
			"biome check --write --unsafe",
			"biome check"
		],
		"*.{js,ts}": [
			"node -e \"console.log('🔍 正在验证文件系统安全...'); process.exit(0);\""
		],
		"*.json": [
			"node -e \"console.log('⚙️ 正在验证JSON格式...'); const fs = require('fs'); JSON.parse(fs.readFileSync(process.argv[1], 'utf8')); console.log('✅ JSON格式正确');\" --"
		]
	}
}
