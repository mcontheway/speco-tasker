#!/usr/bin/env sh

# 运行 lint-staged（只检查暂存的文件）
echo "🔍 正在检查暂存文件的代码质量..."
npx lint-staged

# 运行测试（运行所有CLI命令和MCP工具相关的测试）
echo "🧪 正在运行全面测试覆盖..."

# 运行核心单元测试
echo "  📦 运行核心单元测试..."
npm run test:unit

# 运行MCP工具核心功能测试
echo "  🔧 运行MCP核心功能测试..."
NODE_PATH=$(pwd)/node_modules NODE_OPTIONS="--experimental-vm-modules --experimental-specifier-resolution=node" node_modules/.bin/jest mcp-server/src/core/__tests__/ --passWithNoTests

# 运行依赖管理集成测试（15个测试）
echo "  🔗 运行依赖管理集成测试..."
NODE_PATH=$(pwd)/node_modules NODE_OPTIONS="--experimental-vm-modules --experimental-specifier-resolution=node" node_modules/.bin/jest tests/integration/test_dependency_management.test.cjs --passWithNoTests

# 运行标签系统集成测试（13个测试）
echo "  🏷️  运行标签系统集成测试..."
NODE_PATH=$(pwd)/node_modules NODE_OPTIONS="--experimental-vm-modules --experimental-specifier-resolution=node" node_modules/.bin/jest tests/integration/test_tag_system.test.cjs --passWithNoTests

# 运行任务管理集成测试（8个测试）
echo "  📋 运行任务管理集成测试..."
NODE_PATH=$(pwd)/node_modules NODE_OPTIONS="--experimental-vm-modules --experimental-specifier-resolution=node" node_modules/.bin/jest tests/integration/test_task_management_workflow.test.cjs --passWithNoTests