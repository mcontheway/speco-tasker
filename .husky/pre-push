#!/usr/bin/env sh
# Enhanced pre-push checks for quality assurance
echo "🔍 Running comprehensive pre-push quality checks..."

# Run code quality checks (same as pre-commit)
echo "📏 Running code formatting and linting checks..."
npm run quality-check

# Run unit tests
echo "🧪 Running unit tests..."
npm run test:ci

# Run integration tests (critical for quality)
echo "🔗 Running integration tests..."
npm run test:integration

echo "✅ All pre-push quality checks completed successfully"
