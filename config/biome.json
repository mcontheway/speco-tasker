{
	"files": {
		"ignore": [
			"build",
			"coverage",
			".changeset",
			"tasks",
			"package-lock.json",
			"tests/fixture/*.json",
			"dist",
			"node_modules",
			"apps/docs/build",
			"*.d.ts"
		],
		"include": ["**/*.js", "**/*.ts", "**/*.json"]
	},
	"formatter": {
		"bracketSpacing": true,
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"quoteStyle": "single",
			"trailingCommas": "none",
			"semicolons": "asNeeded"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off",
				"useOptionalChain": "off",
				"useArrowFunction": "off"
			},
			"correctness": {
				"noConstantCondition": "off",
				"noUnreachable": "off",
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noDuplicateTestHooks": "off",
				"noPrototypeBuiltins": "off",
				"noControlCharactersInRegex": "off",
				"noExplicitAny": "warn"
			},
			"style": {
				"noUselessElse": "off",
				"useNodejsImportProtocol": "off",
				"useNumberNamespace": "off",
				"noParameterAssign": "off",
				"useTemplate": "off",
				"noUnusedTemplateLiteral": "off",
				"noNonNullAssertion": "warn"
			},
			"performance": {
				"noDelete": "off"
			}
		}
	}
}
