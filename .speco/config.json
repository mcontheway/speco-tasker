{
  "project": {
    "name": "Debug Test",
    "version": "1.1.5",
    "description": "使用 Speco Tasker 管理项目任务",
    "author": "Speco Team"
  },
  "paths": {
    "root": ".",
    "src": "src",
    "scripts": "scripts/modules",
    "bin": "bin",
    "tests": "tests",
    "config": ".speco",
    "docs": "docs",
    "specs": "specs"
  },
  "features": {
    "pathConfig": true,
    "mcpServer": true,
    "cli": true
  },
  "testing": {
    "framework": "jest",
    "coverage": {
      "enabled": true,
      "thresholds": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "quality": {
    "eslint": true,
    "prettier": true,
    "biome": true
  }
}